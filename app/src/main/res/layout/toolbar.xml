<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:dividerPadding="@dimen/margin_medium"
    android:gravity="end"
    android:orientation="horizontal"
    android:padding="@dimen/margin_small"
    tools:showIn="@layout/activity_main">

    <ImageButton
        android:id="@+id/customizeSelect"
        android:layout_width="wrap_content"
        android:layout_height="@android:dimen/app_icon_size"
        android:layout_marginStart="@dimen/margin_small"
        android:contentDescription="@string/language_select_hint"
        android:src="@drawable/ic_brush" />

    <ImageButton
        android:id="@+id/providerSelect"
        android:layout_width="wrap_content"
        android:layout_height="@android:dimen/app_icon_size"
        android:layout_marginStart="@dimen/margin_small"
        android:contentDescription="@string/language_select_hint"
        android:src="@drawable/ic_newspaper" />


    <ImageButton
        android:id="@+id/shareBtn"
        android:layout_width="wrap_content"
        android:layout_height="@android:dimen/app_icon_size"
        android:layout_marginStart="@dimen/margin_small"
        android:contentDescription="@string/theme_toggle_hint"
        android:src="@drawable/ic_share_button" />
</LinearLayout>